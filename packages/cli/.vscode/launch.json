{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
      ],
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": [
        "test/**/*.test.ts",
        "--timeout",
        "600000",
        "--config",
        "../../.mocharc.json"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
    },
    {
      "type": "pwa-node",
      "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
      ],
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
    },
  ]
}